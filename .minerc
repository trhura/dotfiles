### WENT ###
function went {
    ESCAPED_PATH=$1
    if [ -n "$1" ]; then ESCAPED_PATH=$(printf %q "$1"); fi
    
    DIRECTORY=$(/usr/local/bin/went.py "$ESCAPED_PATH")
    builtin cd "$(eval echo ${DIRECTORY})"
}
alias cd=went

